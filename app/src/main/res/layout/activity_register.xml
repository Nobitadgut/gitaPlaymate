<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color_gray_1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/activity_checkphone_ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_onclick_selector"
            android:src="@mipmap/back_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textColor="@color/text_blackGray"
            android:text="注册"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_view_bg_all"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/activity_checkphone_tv_phonelab"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_blackGray"
            android:textSize="19sp"
            android:text="手机号" />

        <EditText
            android:id="@+id/activity_checkphone_et_phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_toRightOf="@+id/activity_checkphone_tv_phonelab"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_inputText"
            android:background="#00000000"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入手机号"
            />

        <ImageButton
            android:id="@+id/activity_checkphone_ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/activity_checkphone_et_phoneEditText"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_searchtext_selector"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_view_bg_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/activity_checkphone_tv_pwlab"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_blackGray"
            android:textSize="19sp"
            android:text="密码" />

        <EditText
            android:id="@+id/activity_checkphone_et_passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_toRightOf="@+id/activity_checkphone_tv_pwlab"
            android:gravity="center_vertical"
            android:background="#00000000"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_inputText"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/activity_checkphone_cb_isvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/activity_checkphone_et_passwordEditText"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/password_isvisible_selector"
            android:button="@null"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="@drawable/common_view_bg_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_blackGray"
            android:textSize="19sp"
            android:text="验证码" />

        <EditText
            android:id="@+id/activity_checkphone_et_checkCodeEditText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_inputText"
            android:inputType="number"
            android:background="#00000000"
            android:textSize="20sp"
            android:singleLine="true"
            android:hint="请输验证码"
            />

        <Button
            android:id="@+id/activity_checkphone_button_getCheckCode"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@color/basic_color_yellow_1"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_checkphone_button_nextStep"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/basic_color_yellow_1"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="下一步" />

</LinearLayout>