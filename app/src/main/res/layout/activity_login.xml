<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color_gray_1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/activity_login_ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/text_onclick_selector"
            android:src="@mipmap/back_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textColor="@color/text_blackGray"
            android:text="登陆"/>

        <Button
            android:id="@+id/activity_login_button_registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_onclick_selector"
            android:textColor="@color/text_blackGray"
            android:textSize="19dp"
            android:text="注册"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_view_bg_all"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <EditText
            android:id="@+id/activity_login_et_accountEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textColor="@color/text_inputText"
            android:background="#00000000"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入用户名"
            />

        <ImageButton
            android:id="@+id/activity_login_ib_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/activity_login_et_accountEditText"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/main_searchtext_selector"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_view_bg_all"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/activity_login_et_passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:background="#00000000"
            android:layout_marginLeft="2dp"
            android:textColor="@color/text_inputText"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入密码"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/activity_login_cb_isvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/activity_login_et_passwordEditText"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/password_isvisible_selector"
            android:button="@null"/>

    </RelativeLayout>

    <Button
        android:id="@+id/activity_login_button_loginButton"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/basic_color_yellow_1"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="@string/login" />

    <TextView
        android:id="@+id/activity_login_tv_forgetpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:textSize="17sp"
        android:textColor="#0177F8"
        android:text="忘记密码"/>

</LinearLayout>