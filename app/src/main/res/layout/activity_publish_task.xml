<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basic_color_gray_1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/common_view_bg">

        <ImageButton
            android:id="@+id/activity_publish_ib_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_onclick_selector"
            android:src="@mipmap/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/activity_publish_ib_back"
            android:text="我要找玩伴"
            android:textColor="@color/text_blackGray"
            android:textSize="25sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/text_unselect"
        android:text="标题"/>
    <EditText
        android:id="@+id/activity_publish_et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_inputText"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/text_unselect"
        android:text="类型"/>

    <RadioGroup
        android:id="@+id/activity_publish_rg_taskTypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_publish_rb_eat"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="吃喝"/>
            <RadioButton
                android:id="@+id/activity_publish_rb_sing"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="K歌"/>
            <RadioButton
                android:id="@+id/activity_publish_rb_talk"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="聊天"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/activity_publish_rb_sport"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="运动"/>

            <RadioButton
                android:id="@+id/activity_publish_rb_travel"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="旅游"/>

            <RadioButton
                android:id="@+id/activity_publish_rb_other"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_sexul_selector"
                android:gravity="center"
                android:button="@null"
                android:text="其他"/>
        </LinearLayout>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textColor="@color/text_unselect"
        android:text="单价"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.playmate.util.view.AmountView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:btnTextSize="19sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>