<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.playmate.util.view.CircleImageView
        android:id="@+id/list_appointment_userIcon"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="188dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_appointment_tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blackGray"
                android:layout_marginRight="5dp"
                android:textSize="16sp"
                android:text="小何姗姗"/>

            <include android:id="@+id/listview_appointment_ll_sexul"
                layout="@layout/label_sexul_1"/>

            <include android:id="@+id/listview_appointment_ll_isPass_pass"
                layout="@layout/label_ispass_1"/>

            <include android:id="@+id/listview_appointment_ll_isPass_unPass"
                layout="@layout/label_ispass_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blackGray"
                android:textSize="14sp"
                android:text="报价 : "/>
            
            <TextView
                android:id="@+id/listview_appointment_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blackGray"
                android:textSize="14sp"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blackGray"
                android:textSize="14sp"
                android:text="合计 : "/>

            <TextView
                android:id="@+id/listview_appointment_tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blackGray"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/listview_appointment_cb_isChoose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:button="@null"
        android:background="@drawable/checkbox_appointment_selector"/>
</LinearLayout>